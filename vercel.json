{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index.py" }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 300,
      "excludeFiles": "{.git/**,tests/**,**/__pycache__/**,*.pyc,*.pyo,*.log,uv.lock,images/**,docs/**,examples/**,perplexity/server/web/**}"
    }
  }
}
